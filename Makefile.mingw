	-$(call UNLINK,src/*.o)
	-$(call UNLINK,src/zlib/*.o)
	-$(call UNLINK,src/polyglot/*.o)
	-$(call UNLINK,src/universalchardet/*.o)
	-$(call UNLINK,src/cql/*.o)
	-$(call UNLINK,scid.res)
	-$(call UNLINK,scid.gui)
	-$(call UNLINK,$(EXECS))

